					a.social__link.loading(href='#')
						+lazyImg('social/social2.png')
				.social__column.social__column--3
					a.social__link.loading(href='#')
						+lazyImg('social/social3.png')
				.social__column.social__column--4
					a.social__link.loading(href='#')
						+lazyImg('social/social4.png')
				.social__column.social__column--5
					a.social__link.loading(href='#')
						+lazyImg('social/social5.png')
				.social__column.social__column--6
					a.social__link.loading(href='#')
						+lazyImg('social/social6.png')
	+mailing