extends ../layout

block variables
	- var title = 'OJJO Contacts';

block content
	section.page__breadcrumbs.breadcrumbs  
		.breadcrumbs__container.__container
			.breadcrumbs__content 
				ol.breadcrumbs__list(itemscope='' itemtype='https://schema.org/BreadcrumbList')
					li.breadcrumbs__item(itemprop='itemListElement' itemscope='' itemtype='https://schema.org/ListItem')
						a.breadcrumbs__link(itemprop='item' href='index.html')
							span(itemprop='name') Главная
						meta(itemprop='position' content='1')
					li.breadcrumbs__item(itemprop='itemListElement' itemscope='' itemtype='https://schema.org/ListItem')
						span(itemprop='name') Контакты
						meta(itemprop='item' content='contscts.html')
						meta(itemprop='position' content='2')
	section.page__contacts.contacts 
		.contacts__container.__container
			h2.contacts__title Контакты
			.contacts__body 
				+flexItemDescription('contacts__column', 'contacts__item item-contacts')
					h3.item-contacts__title Главный офис
					.item-contacts__info 
						.item-contacts__icon
							span.contacts-icon.icon-location
						.item-contacts__content 
							a.item-contacts__link.content__link(href='#') Невский 140, офис 1-5
							a.item-contacts__link.content__link(href='#') Невский 140, офис 1-5
				+flexItemDescription('contacts__column', 'contacts__item item-contacts')
					h3.item-contacts__title Телефоны
					.item-contacts__info 
						.item-contacts__icon
							span.contacts-icon.icon-phone
						.item-contacts__content 
							a.item-contacts__link.content__link(href='tel:+78124585645') 8 (812) 458-56-45
							a.item-contacts__link.content__link(href='tel:+79118780000') 8-911-878-00-00
				+flexItemDescription('contacts__column', 'contacts__item item-contacts')
					h3.item-contacts__title Email
					.item-contacts__info 
						.item-contacts__icon
							span.contacts-icon.icon-mail
						.item-contacts__content 
							a.item-contacts__link.content__link(href='mailto:office@ojjo.com') office@ojjo.com
							a.item-contacts__link.content__link(href='mailto:sales@ojjo.com') sales@ojjo.com
				+flexItemDescription('contacts__column', 'contacts__item item-contacts')
					h3.item-contacts__title Доп. адреса
					.item-contacts__info 
						.item-contacts__icon
							span.contacts-icon.icon-location
						.item-contacts__content 
							a.item-contacts__link.content__link(href='#') Невский 142, офис 1-5
							a.item-contacts__link.content__link(href='#') Загородный 145, офис 11-15
			.contacts__map.loading 
				iframe(data-src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3623.3614539171936!2d30.35538621630495!3d59.928712400993255!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x469631bb92b2b7f5%3A0xfc6c3540c8fb3df8!2z0J3QtdCy0YHQutC40Lkg0L_RgC4sIDE0MCwg0KHQsNC90LrRgi3Qn9C10YLQtdGA0LHRg9GA0LMsIDE5MTAzNg!5e0!3m2!1sru!2sru!4v1648123441836!5m2!1sru!2sru' width='100%' height='450' style='border:0;' allowfullscreen='' loading='lazy')



				