block variables
	- var title = 'OJJO';

block content
	section.page__description.description
		.description__container.__container
			.description__body
				h1.description__title Долго, дорого, богато
				+buttonBlock('description__button', 'description__link', 'Каталог изделий', 'catalog.html')
			.description__cover._ibg
				+img('description/bgc.jpg', 'Cover')
	section.page__brands.brands 
		.brands__container.__container 
			.brands__body
				+flexItemDescription('brands__column', 'brands__item')
					+img('brands/brand-item.png', 'Brand Name')
				+flexItemDescription('brands__column', 'brands__item')
